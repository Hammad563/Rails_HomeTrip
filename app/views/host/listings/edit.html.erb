<h1>Edit <%= @listing.title %></h1>
<%= render partial: "shared/errors" %>
<form action="<%= host_listing_path(@listing) %>"  method="post">
 <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
<input type="hidden" name="_method" value="PUT" />

<label for="title">Title</label>
<input type="text" name="listing[title]" value="<%= @listing.title %>" />

<label for="about">About</label>
<input type="text" name="listing[about]" value="<%= @listing.about %>" />

<label for="max_guests">Max Guests</label>
<input type="number" name="listing[max_guests]" value="<%= @listing.max_guests %>"  min="1" max="100" step="1"/>

<label for="nighty_price">Nightly price</label>
<input type="number" name="listing[nighty_price]" value="<%= @listing.nighty_price %>"/>

<label for="cleaning_fee">Cleaning Fee</label>
<input type="number" name="listing[cleaning_fee]" value="<%= @listing.cleaning_fee %>"/>

<label for="status">Status</label>
<select name="listing[status]">
        <% Listing.statuses.keys.each do |status| %>
            <option <%= 'selected' if @listing.status == status %> > <%= status %></option>
        <% end %>
</select>

 <input type="submit" value="Update"/>
</form>