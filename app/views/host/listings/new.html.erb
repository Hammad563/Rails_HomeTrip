<h1>List your property</h1>
<%= render partial: "shared/errors" %>
<form action="/host/listings" method="post">
 <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>

<label for="title">Title</label>
<input type="text" name="listing[title]" value="<%= @listing.title %>" />

<label for="about">About</label>
<input type="text" name="listing[about]" value="<%= @listing.about %>" />
<div data-controller="address">
    <label for="address">Address</label>
    <input type="text" id="address" autocomplete="off" />
</div>

<label for="max_guests">Max Guests</label>
<input type="number" name="listing[max_guests]" value="<%= @listing.max_guests %>"  min="1" max="100" step="1"/>

 <input type="submit" value="Create Listings"/>
</form>
